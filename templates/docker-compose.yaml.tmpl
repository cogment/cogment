{{ $config := . -}}
version: '3.7'

services:
  grpc-cli:
    image: namely/grpc-cli:1.28_1

{{- range .ActorClasses}}

{{- if $config.HasAiByActorClass .Id }}
  {{.Id|kebabify}}:
    build:
      context: {{.Id|snakeify}}
      dockerfile: ../py_service.dockerfile
    environment:
      - COGMENT_GRPC_REFLECTION=1
      - PYTHONUNBUFFERED=1
{{end}}
{{end}}

  environment:
    build:
      context: environment
      dockerfile: ../py_service.dockerfile
    environment:
      - COGMENT_GRPC_REFLECTION=1
      - PYTHONUNBUFFERED=1

  orchestrator:
    build:
      context: .
      dockerfile: orchestrator.dockerfile
    ports:
      - "9000:9000"

  client:
    build:
      context: client
      dockerfile: ../py_service.dockerfile
    environment:
      - PYTHONUNBUFFERED=1
    stdin_open: true
    tty: true
